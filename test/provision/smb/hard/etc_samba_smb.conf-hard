#======================= Global Settings =====================================
#Ansible managed
[global]
 workgroup = WORKGROUP
 server string = Samba Asserts Server %v
 netbios name = assertsserver
 security = user
 server role = standalone server
 passdb backend = tdbsam
 obey pam restrictions = yes
 unix password sync = yes
 map to guest = never
 dns proxy = no
 restrict anonymous = 2
#============================ Share Definitions ==============================

#### Public Share ####
[public]
 path = /samba/public
 browsable = yes
 writable = yes
 guest ok = yes
 read only = no

#### Private Share ####
[private]
 path = /samba/private
 valid users = @smbgrp
 guest ok = no
 writable = yes
 browsable = yes
 create mask = 0700
 directory mask = 0700
